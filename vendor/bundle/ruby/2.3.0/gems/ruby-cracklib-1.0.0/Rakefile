require 'rubygems'
require 'hoe'

Hoe.spec 'ruby-cracklib' do
  developer('Kevin R. Bullock', 'kbullock@ringworld.org')

  self.extra_deps << ['ffi', '>= 0.6.3', '< 1.10.0']
  self.extra_dev_deps << ['shoulda', '~> 2.11.3']
  self.extra_dev_deps << ['mocha', '~> 0.9.8']
  self.license 'LGPLv2.1'
end

